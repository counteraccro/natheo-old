<div class="modal fade" id="modal-create-update-folder" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <i class="fa fa-folder-plus"></i> {{ title }}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{ form(form) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}

    <script>
        $(document).ready(function () {
            let myModal = new bootstrap.Modal($('#modal-create-update-folder'), [])
            myModal.toggle();

            {% if(parent != null) %}
                $('#folder_parent option[value="{{ parent.id }}"]').prop('selected', true);
            {% endif %}


        });
    </script>

{% endblock %}