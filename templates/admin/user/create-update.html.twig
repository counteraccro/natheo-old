{% extends 'admin/admin.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div id="admin-create-update-user">
    <h1>{{ title }}</h1>

    {{ breadcrumb | breadcrumb | raw }}

    {% if(user != null) %}
    <div class="card mb-4">
        <div class="card-header">
            {{ "admin_user#Résumé" | trans }}
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-4">
                    Avatar
                </div>
                <div class="col-8">
                    <table class="table table-hover table-striped">
                        <tr>
                            <td> {{ "admin_user#Nom" | trans }}</td>
                            <td> {{ user.name }} {{ user.surname }}</td>
                        </tr>
                        <tr>
                            <td> {{ "admin_user#Nom de publication" | trans }}</td>
                            <td> {{ user.publicationName }}</td>
                        </tr>
                        <tr>
                            <td> {{ "admin_user#Email" | trans }}</td>
                            <td> {{ user.email }}</td>
                        </tr>
                        <tr>
                            <td> {{ "admin_user#Dernière connexion" | trans }}</td>
                            <td> {{ user.lastLogin | dateFormat(dateFormat, timeFormat) }}</td>
                        </tr>
                        <tr>
                            <td> {{ "admin_user#Dernier changemen de mot de passe" | trans }}</td>
                            <td> {{ user.lastPasswordUpdae | dateFormat(dateFormat, timeFormat) }}</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    {{ "admin_user#Information sur l'utilsateur" | trans }}
                </div>
                <div class="card-body">
                    {{ form(form) }}
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    {{ "admin_user#Attribution des rôles" | trans }}
                </div>
                <div class="card-body">

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}

    <script>
        $( document ).ready(function() {

        });
    </script>

{% endblock %}

