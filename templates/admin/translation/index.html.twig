{% extends 'admin/admin.html.twig' %}

{% block title %}Hello TranslationController!{% endblock %}

{% block body %}

    <div id="admin-translation-globale">
        <h1>{{ "admin_translation#Gestion des traductions" | trans }}</h1>

        {{ breadcrumb | breadcrumb | raw }}

        <div class="float-end mb-3">
            <div class="btn btn-danger" id="btn-reset-translate" data-url="{{ path('admin_translation_ajax_reset_translation') }}"
                 data-loading="{{"admin_translation#Regénération des traductions, cela peut prendre du temps..." | trans}}"
                 data-loading2="{{"admin_translation#Rechargement de la page..." | trans}}"><i class="fa fa-exclamation-triangle"></i> {{ "admin_translation#Réinitialiser les traductions" | trans}}</div>
            <div class="btn btn-primary"><i class="fa fa-sync-alt"></i> {{"admin_translation#Regénérer les traductions" | trans}}</div>
        </div>

        <div class="clearfix"></div>

        <div class="card">
            <div class="card-body">
                <div class="row">
                    {{ "" | formSearchTranslation | raw }}
                </div>
            </div>
            <div class="card-footer">
                <div class="btn btn-primary float-end"><i class="fa fa-search"></i> {{"admin_translation#Filter les données" | trans}}</div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">- {{ 'admin_translation#Traductions' | trans }}</div>
            <div class="card-body" id="listing-translation" data-url="{{ path('admin_translation_ajax_listing_translation') }}" data-loading="{{ "admin_translation#Chargement des traductions..." | trans }}">
            </div>
        </div>


    </div>
{% endblock %}

{% block javascripts %}

    <script>
        $( document ).ready(function() {
            Translation.Launch();
            Translation.PageListingEvent();
            Translation.LoadListingTranslation();
        });
    </script>

{% endblock %}
