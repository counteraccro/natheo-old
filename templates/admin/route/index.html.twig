{% extends 'admin/admin.html.twig' %}

{% block title %}Hello RouteController!{% endblock %}

{% block body %}
<div id="admin-route-globale">
    <h1>{{ "Gestion des routes" | trans }}</h1>

    {{ breadcrumb | breadcrumb | raw }}

    <div class="float-end">
        <div id="btn-update-route" data-loading="{{ "Mise à jour des routes..." }}" data-url="{{ path('admin_route_ajax_update_route') }}" class="btn btn-primary mb-2">
            <i class="fas fa-sync-alt"></i> {{ "Mise à jour des routes" | trans }}
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="card">
        <div class="card-header">
            Featured
        </div>
        <div class="card-body">
            <h5 class="card-title">Special title treatment</h5>
            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
    </div>

</div>
{% endblock %}

{% block javascripts %}

    <script>
        $( document ).ready(function() {
            Route.Launch();
            Route.PageListingEvent();
        });
    </script>

{% endblock %}
