<div class="modal" tabindex="-1" id="modale-delete-faq-cat">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fa fa-trash-alt"></i> {{ "admin_faq#Suppression de la FAQ Catégorie" | trans }} #{{ faqCategory.id }}"</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h5>{{ "admin_faq#Attention" | trans }}</h5>
                <div class="text-danger">
                    {{ "admin_faq#Est vous sur de vouloir supprimer cette FAQ Catégorie ainsi que tous les données associées ?"  | trans }} <br />
                    {{ "admin_faq#La suppression d'une FAQ Catégorie implique :"  | trans }} <br >
                    <i class="fa fa-long-arrow-alt-right"></i> {{ "admin_faq#La supression de toutes les questions/réponses associées"  | trans }} <br >
                    <b>{{ "admin_faq#Cette action est définitive et sans retour arrière" | trans }}</b>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ "admin_faq#Annuler" | trans }}</button>
                <button type="button" class="btn btn-danger" id="btn-confirm-delete-faq-cat"
                        data-loading="{{ "admin_faq#Suppression de la FAQ catégorie en cours...." | trans }}"
                        data-url="{{ path('admin_faq_category_ajax_delete', {'id' : faqCategory.id, 'confirm' : true}) }}"
                        data-redirect="{{ path('admin_faq_category_index') }}">{{ "admin_faq#Supprimer la FAQ Catégorie" | trans }}</button>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}

    <script>
        $(document).ready(function () {
            let modal = new bootstrap.Modal($('#modale-delete-faq-cat'), [])
            modal.toggle();
            FAQCategory.EventDelete(modal);
        });
    </script>

{% endblock %}